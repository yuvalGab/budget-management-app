{
  "name": "budget-management-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "install:shared": "cd shared && npm install",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "install:all": "npm run install:shared && npm run install:server && npm run install:client",
    "build:shared": "cd shared && npm run build",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "build:all": "npm run build:shared && npm run build:server && npm run build:client",
    "start:server": "cd server && npm start",
    "start:client": "cd client && npm run dev",
    "start:all": "npm-run-all --parallel start:server start:client"
  },
  "author": "",
